  >
    <!-- よくいる場所 -->
    <PlacesSection
      sectionId="dart-spots-heading"
      title="よくいるダーツスポット"
      class="mt-10 mb-10"
      areas={[
        {
          id: 'dart-spots',
          places: dartSpots,
        },
      ]}
    />

    <!-- よく行くお店 -->
    <PlacesSection
      sectionId="food-shops-heading"
      title="よく行く飲食店"
      class="mt-4"
      areas={shopAreas}

---
import Layout from '../layouts/Layout.astro';
import ListPageLayout from '../components/ListPageLayout.astro';
import PlacesSection, {
  type Place,
} from '../components/PlacesSection.astro';

const dartSpots: Place[] = [
  { label: 'myroom（松戸）' },
	{ label: '快活CLUB（松戸）' },
];

const shopAreas: { id: string; title: string; places: Place[] }[] = [
  {
    id: 'tokyo',
    title: '東京',
    places: [
      { label: 'ラーメン鴨と葱（上野）' },
      { label: 'あおもりや（池袋）' },
      { label: 'ラーメン二郎 新宿小瀧通り店' },
    ],
  },
  {
    id: 'chiba',
    title: '千葉',
    places: [
      { label: 'ラーメン かいざん（西船橋）' },
      { label: '王道家（柏）' },
      { label: 'なりたけ（本八幡）' },
      { label: '一心（新松戸）' },
      { label: '大庄水産（新松戸）' },
      { label: '松屋（南柏）' },
    ],
  },
  {
    id: 'aomori',
    title: '青森',
    places: [
      { label: 'そば処味新（弘前）' },
      { label: '中華そばたかはし（弘前）' },
      { label: '野呂家（弘前）' },
      { label: 'ラーメンあさり（青森）' },
    ],
  },
];
---

<Layout>
  <ListPageLayout
    title="生息地"
    backHref="/"
    backLabel="← ホームに戻る"
    description="よくいる場所と、よく行くお店のメモです。どこかで遭遇したら飯でも奢ってやるよ。"
  >
    <!-- よくいる場所 -->
    <PlacesSection
      sectionId="dart-spots-heading"
      title="よくいるダーツスポット"
      class="mt-10 mb-10"
      areas={[
        {
          id: 'dart-spots',
          places: dartSpots,
        },
      ]}
    />

    <!-- よく行くお店 -->
    <PlacesSection
      sectionId="food-shops-heading"
      title="よく行く飲食店"
      class="mt-4"
      areas={shopAreas}
    />
  </ListPageLayout>
</Layout>

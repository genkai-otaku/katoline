---
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = '@tonosaki', description = '@tonosakiの個人サイトです。' } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/webp" href="/icon-head.webp" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <!-- LCP画像の優先読み込み -->
    <link rel="preload" as="image" href="/icon-head.webp" fetchpriority="high" />
    <!-- Google Fontsの最適化（非ブロッキング読み込み、必要なウェイトのみ） -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet" />
    </noscript>
    <title>{title}</title>
    <!-- テーマの初期化（FOUCを防ぐためhead内で先に実行） -->
    <script is:inline>
      (function() {
        const savedTheme = localStorage.getItem('theme');
        // デフォルトはダークモード
        const theme = savedTheme || 'dark';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body>
    <ThemeToggle />
    <slot />
  </body>
</html>

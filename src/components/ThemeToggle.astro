---
// テーマ切り替え関数
function toggleTheme() {
  const currentTheme = document.documentElement.getAttribute('data-theme') || 'dark';
  const newTheme = currentTheme === 'light' ? 'dark' : 'light';
  document.documentElement.setAttribute('data-theme', newTheme);
  localStorage.setItem('theme', newTheme);
}

// 関数を文字列化してHTML属性に埋め込む
const toggleThemeString = `(${toggleTheme.toString()})();`;
---
<button
  id="theme-toggle"
  class="fixed top-4 right-4 p-3 rounded-full bg-gray-300 text-gray-800 hover:bg-gray-400 transition-colors duration-200 z-50"
  style="background-color: #d1d5db; color: #1f2937;"
  aria-label="テーマを切り替え"
  title="テーマを切り替え"
  onclick={toggleThemeString}
>
  <svg
    class="w-5 h-5"
    fill="#1f2937"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
    style="color: #1f2937;"
  >
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
  </svg>
</button>


---
interface Props {
  title: string;
  backHref?: string;
  backLabel?: string;
  description?: string;
}

const {
  title,
  backHref = '/',
  backLabel = '← ホームに戻る',
  description,
} = Astro.props as Props;
---

<main class="min-h-screen pt-16 pb-12 px-4">
  <div class="max-w-xl mx-auto">
    {backHref && (
      <a
        href={backHref}
        class="inline-block mb-4 text-sm text-gray-600 dark:text-gray-400 hover:underline"
      >
        {backLabel}
      </a>
    )}

    <h1 class="text-3xl font-bold mb-4 text-black dark:text-gray-100">
      {title}
    </h1>

    {description && (
      <div class="mb-8 space-y-2 text-sm text-gray-700 dark:text-gray-300">
        <p>{description}</p>
      </div>
    )}

    <slot />
  </div>
</main>


